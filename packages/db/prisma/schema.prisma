generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         Int         @id @default(autoincrement())
  username   String
  email      String      @unique
  password   String
  resumeUrl  String?
  portfolio  String?
  phoneNumber String?    @unique
  location   String?
  linkedIn   String?
  github     String?
  consent    Boolean     @default(false)
  
  projects   Project[]
  techStacks TechStack[] 
  jobs       Job[]       @relation("UserJobs")
}

model Job {   
  id          Int         @id @default(autoincrement())
  title       String
  description String
  salary      Int?
  experience  String?
  type        String
  skillset    String[]
  techStacks  TechStack[]
  applicants  User[]      @relation("UserJobs")
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  url         String
  landingPage String?
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  techStacks  TechStack[]
}

model TechStack {
  id          Int         @id @default(autoincrement())
  name        String
  userId      Int?        
  user        User?       @relation(fields: [userId], references: [id])
  projectId   Int?        
  project     Project?    @relation(fields: [projectId], references: [id])
  jobId       Int?        
  job         Job?        @relation(fields: [jobId], references: [id])
}
